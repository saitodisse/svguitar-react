{
	"name": "svguitar-react",
	"private": false,
	"version": "1.3.0",
	"type": "module",
	"description": "A React component for rendering guitar chord diagrams in SVG format",
	"keywords": [
		"react",
		"guitar",
		"chord",
		"diagram",
		"svg",
		"music"
	],
	"author": "svguitar-react",
	"license": "MIT",
	"main": "./dist/index.js",
	"module": "./dist/index.es.js",
	"types": "./dist/index.d.ts",
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"import": "./dist/index.es.js",
			"require": "./dist/index.js"
		}
	},
	"files": [
		"dist"
	],
	"repository": {
		"type": "git",
		"url": "git+https://github.com/svguitar/svguitar-react.git"
	},
	"homepage": "https://github.com/svguitar/svguitar-react#readme",
	"bugs": {
		"url": "https://github.com/svguitar/svguitar-react/issues"
	},
	"scripts": {
		"dev": "vite",
		"build": "tsc -p tsconfig.lib.json && vite build",
		"build:app": "vite build --config vite.config.app.ts",
		"lint": "eslint .",
		"preview": "vite preview",
		"preview:app": "vite preview --config vite.config.app.ts",
		"storybook": "storybook dev -p 6006",
		"storybook:ci": "storybook dev -p 6006 --ci",
		"build-storybook": "storybook build",
		"test-storybook": "test-storybook",
		"format": "prettier --write .",
		"format:check": "prettier --check ."
	},
	"peerDependencies": {
		"react": ">=18.0.0",
		"react-dom": ">=18.0.0"
	},
	"dependencies": {
		"i18next": "^25.5.2",
		"i18next-browser-languagedetector": "^8.2.0",
		"nuqs": "^2.6.0",
		"react": "^19.1.1",
		"react-dom": "^19.1.1",
		"react-i18next": "^16.0.0"
	},
	"devDependencies": {
		"@chromatic-com/storybook": "4.1.1",
		"@eslint/js": "^9.36.0",
		"@storybook/addon-a11y": "9.1.8",
		"@storybook/addon-docs": "9.1.8",
		"@storybook/addon-onboarding": "9.1.8",
		"@storybook/addon-vitest": "9.1.8",
		"@storybook/react-vite": "9.1.8",
		"@storybook/test-runner": "^0.23.0",
		"@testing-library/jest-dom": "^6.8.0",
		"@testing-library/react": "^16.3.0",
		"@testing-library/user-event": "^14.6.1",
		"@types/node": "^24.5.2",
		"@types/react": "^19.1.13",
		"@types/react-dom": "^19.1.9",
		"@vitejs/plugin-react": "^5.0.3",
		"@vitest/browser": "^3.2.4",
		"@vitest/coverage-v8": "^3.2.4",
		"eslint": "^9.36.0",
		"eslint-plugin-react-hooks": "^5.2.0",
		"eslint-plugin-react-refresh": "^0.4.20",
		"eslint-plugin-storybook": "9.1.8",
		"globals": "^16.4.0",
		"jsdom": "^27.0.0",
		"playwright": "^1.55.1",
		"prettier": "^3.6.2",
		"storybook": "9.1.8",
		"typescript": "~5.8.3",
		"typescript-eslint": "^8.44.0",
		"vite": "^7.1.7",
		"vitest": "^3.2.4"
	}
}
